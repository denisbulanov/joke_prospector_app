<div class="page-header">
  <h1>
    Select a Setup, then list the assumptions
    <a href="/setups/new" class="btn btn-lg btn-success">New Setup</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @setups.each do |setup| %>
      <tr>
        <td><%= setup.body %></td>
        <td>
          <a href="/setups/<%= setup.id %>" class="btn btn-default btn-sm"><i class="fa fa-search-plus" aria-hidden="true"></i></a>
          <a href="/setups/<%= setup.id %>/edit" class="btn btn-default btn-sm"><i class="fa fa-edit fa-fw"></i></a>
          <a href="/delete_setup/<%= setup.id %>" class="btn btn-default btn-sm" rel="nofollow"><i class="fa fa-trash-o fa-fw"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
