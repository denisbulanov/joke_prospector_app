<div class="page-header">
  <h3><%= @setup.body %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="btn-group btn-group-justified">
      <a href="/setups" class="btn btn-primary">
        Back
      </a>
      <a href="/setups/<%= @setup.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_setup/<%= @setup.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<% @assumptions.each do |assumption| %>
<div class="panel panel-default">
  <div class="panel-heading"><%= assumption.body %></div>
  <div class="panel-body">
    <a href="/assumptions/<%= assumption.id %>" class="btn btn-default btn-sm"><i class="fa fa-search-plus" aria-hidden="true"></i></a>
    <a href="/assumptions/<%= assumption.id %>/edit" class="btn btn-default btn-sm"><i class="fa fa-edit fa-fw"></i></a>
    <a href="/delete_assumption/<%= assumption.id %>" class="btn btn-default btn-sm" rel="nofollow"><i class="fa fa-trash-o fa-fw"></i></a>
  </div>
</div>
<% end %>

<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        Create a new assumption
      </h3>
    </div>
    <div class="panel-body">
      <form action="/create_assumption" method="post">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for body -->
        <div class="form-group">
          <label for="body" class="control-label">
            Body
          </label>

          <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"></textarea>
        </div>

        <!-- Label and input for connector -->
        <div class="form-group">
          <label for="connector" class="control-label">
            Connector
          </label>

          <textarea id="connector" name="connector" placeholder="Connector" class="form-control" rows="1"></textarea>
        </div>

        <input type="hidden" id="setup_id" name="setup_id" placeholder="Setup" class="form-control" value="<%= @setup.id %>">

        <button class="btn btn-success btn-block">
          Create Assumption
        </button>
      </form>
    </div>
  </div>
</div>



</div>
</div>
