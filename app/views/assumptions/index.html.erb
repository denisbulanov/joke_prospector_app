<div class="page-header">
  <h1>
    Assumptions
    <a href="/assumptions/new" class="btn btn-lg btn-success">New Assumption</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Connector</th>
        <th>Body</th>
        <th>Setup</th>
        <th>Actions</th>
      </tr>

      <% @assumptions.each do |assumption| %>
      <tr>
        <td><%= assumption.connector %></td>
        <td><%= assumption.body %></td>
        <td><%= assumption.setup_id %></td>
        <td>
          <a href="/assumptions/<%= assumption.id %>" class="btn btn-primary">Show</a>
          <a href="/assumptions/<%= assumption.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_assumption/<%= assumption.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
