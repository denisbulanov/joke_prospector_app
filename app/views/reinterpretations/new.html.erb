<!-- Validation failure messages -->
<% if @reinterpretation.errors.any? %>
  <% @reinterpretation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Reinterpretation</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_reinterpretation" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for connector -->
      <div class="form-group">
        <label for="connector" class="control-label">
          Connector
        </label>

        <textarea id="connector" name="connector" placeholder="Connector" class="form-control" rows="3"><%= @reinterpretation.connector %></textarea>
      </div>

      <!-- Label and input for assumption_id -->
      <div class="form-group">
        <label for="assumption_id" class="control-label">
          Assumption
        </label>

        <input type="text" id="assumption_id" name="assumption_id" placeholder="Assumption" class="form-control" value="<%= @reinterpretation.assumption_id %>">
      </div>

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @reinterpretation.body %></textarea>
      </div>

      <button class="btn btn-success">
        Create Reinterpretation
      </button>
      or
      <a href="/reinterpretations">Cancel</a>
    </form>
  </div>
</div>
